@using ProductRecommender.Models
@model IEnumerable<Product>
@{
    ViewBag.Title = "Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><span class="glyphicon glyphicon-barcode"></span> Products Recommender</h1>

<hr>
<h3>Trending Products</h3>

<div class="row">
    @if (Model != null)
    {
        foreach (var product in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-block">
                        <h3 class="card-title">@product.ProductName</h3>
                        <a href="@Url.Action("Buy", "Products")" class="btn btn-primary">Buy Product</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2>Something went wrong! please check the error log.</h2>
    }
</div>
<hr />
<button type="button" class="btn breadcrumb" id="select" onclick="location.href='@Url.Action("Profiles", "Products")'">
    <span class="glyphicon glyphicon-ok "></span> This is fun, let me try again!
</button>
